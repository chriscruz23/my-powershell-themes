{
    "blocks": [
        {
            "type": "prompt",
            "alignment": "left",
            "segments": [
                {
                    "type": "status",
                    "style": "diamond",
                    "leading_diamond": "╭─",
                    "foreground": "#82D4BB",
                    "background": "#2E2532",
                    "foreground_templates": [
                        "{{ if eq .Code 1 }}#FFFB38{{ end }}"
                    ],
                    "background_templates": [
                        "{{ if eq .Code 1 }}#ef5350{{ end }}"
                    ],
                    "templates": [
                        "{{ if eq .Code 0 }}   {{ else }} 󰭿 {{ end }}"
                    ],
                    "properties": {
                        "always_enabled": true
                    }
                },
                {
                    "type": "root",
                    "style": "diamond",
                    "foreground": "#FFFB38",
                    "background": "#ef5350",
                    "template": "<parentBackground></>  "
                },
                {
                    "type": "path",
                    "style": "powerline",
                    "powerline_symbol": "",
                    "foreground": "#82D4BB",
                    "background": "#0B7189",
                    "properties": {
                        "style": "agnoster_short",
                        "max_depth": 2,
                        "folder_icon": "…",
                        "folder_separator_icon": " <#2E2532></> ",
                        "home_icon": "󰋞"
                    },
                    "template": " {{ .Path }} "
                },
                {
                    "type": "executiontime",
                    "style": "diamond",
                    "template": "  {{ .Ms}}ms",
                    "foreground": "#ffffff",
                    "background": "#83769c",
                    "trailing_diamond": "",
                    "properties": {
                        "threshold": 0
                    }
                }
            ]
        },
        {
            "type": "prompt",
            "alignment": "right",
            "segments": [
                {
                    "type": "python",
                    "style": "diamond",
                    "template": " ({{ .Venv }})",
                    "leading_diamond": "",
                    "trailing_diamond": "",
                    "foreground": "#ffffff",
                    "background": "#83769c",
                    "properties": {
                        "home_enabled": true
                    }
                }
            ]
        },
        {
            "type": "prompt",
            "alignment": "left",
            "newline": true,
            "segments": [
                {
                    "foreground": "#2E2532",
                    "style": "plain",
                    "template": "╰─",
                    "type": "text"
                }
            ]
        }
    ],
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "final_space": true,
    "version": 3,
    "upgrade": {
        "source": "cdn",
        "auto": true,
        "notice": false
    }
}
