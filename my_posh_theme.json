{
    "palette": {
        "yellow": "#FDE74C",
        "error": "#FB3640",
        "grey": "#193549"
    },
    "blocks": [
        {
            "type": "prompt",
            "alignment": "left",
            "segments": [
                {
                    "type": "path",
                    "style": "diamond",
                    "leading_diamond": "╭─",
                    "powerline_symbol": "",
                    "foreground": "#82D4BB",
                    "background": "#2E2532",
                    "properties": {
                        "style": "folder",
                        "home_icon": " "
                    }
                },
                {
                    "type": "status",
                    "style": "powerline",
                    "powerline_symbol": "",
                    "foreground": "#82D4BB",
                    "background": "#0B7189",
                    "foreground_templates": [
                        "{{ if eq .Code 1 }}p:yellow{{ end }}"
                    ],
                    "background_templates": [
                        "{{ if eq .Code 1 }}p:error{{ end }}"
                    ],
                    "templates": [
                        "{{ if eq .Code 0 }} ٩(ˊᗜ ˋ*)و ♡ {{ else }}( ಠ_ಠ){{ end }}"
                    ],
                    "properties": {
                        "always_enabled": true
                    }
                }
            ]
        },
        {
            "type": "prompt",
            "alignment": "right",
            "segments": [
                {
                    "type": "python",
                    "style": "diamond",
                    "foreground": "p:yellow",
                    "background": "#935FA7",
                    "leading_diamond": "",
                    "trailing_diamond": "",
                    "template": " ({{ .Venv }})",
                    "properties": {
                        "home_enabled": true
                    }
                }
            ]
        }
    ],
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "final_space": true,
    "version": 3,
    "upgrade": {
        "source": "cdn",
        "auto": true,
        "notice": false
    }
}
